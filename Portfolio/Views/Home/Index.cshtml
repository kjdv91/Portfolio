@model Persona
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Soy @Model.Name.ToUpper() tengo @Model.Edad </h1>
    <h2> Soy un desarrollador full stack, especializado en tecnologias Microsoft y Blockchain </h2>
    <img id="foto" src="~/img/Foto.jpg" alt="foto kevin" />

</div>


<div class="row justify-content-center text-center bg-primary">
    <div class="col col-md-7 section-description">
        <p>
            Soy Tecnólogo en electrónica, actualmente trabajando como desarrollador de software y soy un apasionado de aprender y construir en tecnología microsoft y blockchain .
            Soy una persona de rápido aprendizaje, curiosa, enfocada en los detalles y en la resolución de problemas.
        </p>
    </div>
    <div style="margin-top: -105px">
        <div class="row justify-content-md-center text-center">
            <div class="col col-3 bg-white resume-back"  >
                <i class="bi bi-database"></i>
                <h3>Backend</h3>
                <p>
                    Trabajo desde el desarrollo, pruebas unitarias y puesta en produccion con entrega continua
                </p>
                <p class="text-primary cabecera">
                    Stack:
                </p>
                <p >
                    ASP.NET Core, SQL Server, Solidity, Rust
                </p>
                <p class="text-primary cabecera">
                    Experiencia:
                </p>
                <ul>
                    <li>Entity Framework Core</li>
                    <li>.NET Core MVC</li>
                    <li>Web Apis</li>
                    <li>Smart Contracts</li>
                    <li>Layer 2</li>

                </ul>


            </div>
            
            <div class="col col-3 bg-white resume-front">
                <i class="bi bi-code-slash"></i>
                <h3> Frontend</h3>
                <p>Puedo crear front-end que cumplan con los requerimientos del negocio
                    
                </p><br/>

                <p class="text-primary cabecera">
                    Stack:
                </p>
                <p>
                    Reactjs, Angular

                </p>
                <p class="text-primary cabecera">
                    Experiencia:
                </p>
                <ul>
                    <li>JavaScript</li>
                    <li>TypeScript</li>
                    <li>Html</li>
                    <li>Css</li>
                    <li>Bootstrap</li>
                </ul>
            </div>
        </div>

    </div>

</div>